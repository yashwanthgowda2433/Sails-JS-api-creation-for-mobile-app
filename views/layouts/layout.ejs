        <div class="form-inline d-none ml-2 d-md-block" >
          <a class="btn btn-outline-info" href="/signup">Sign up</a>
        </div>
        <!-- Only in mobile nav -->
        <a class="nav-item nav-link text-info ml-2 d-block d-md-none" href="/signup">Sign up</a>
        <% } %>
      </div>
    </header>

